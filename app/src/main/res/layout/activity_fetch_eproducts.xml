<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FetchEProducts"
android:orientation="vertical">


    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/FetchProducts_textView" android:textSize="25sp"
            android:gravity="center_horizontal" android:textColor="@android:color/holo_purple"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/fetchProductsRV"/>
</LinearLayout>